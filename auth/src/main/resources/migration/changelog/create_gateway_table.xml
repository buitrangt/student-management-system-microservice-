<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Tạo bảng user -->
    <changeSet id="1-create-user-table" author="yourname">
        <createTable tableName="user">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="class_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="department_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_by" type="VARCHAR(255)"/>
            <column name="last_updated_at" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- Tạo bảng account -->
    <changeSet id="2-create-account-table" author="yourname">
        <createTable tableName="account">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_by" type="VARCHAR(255)"/>
            <column name="last_updated_at" type="BIGINT"/>
            <column name="lock_permanent" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <!-- Thêm khóa ngoại từ bảng account đến user -->
    <changeSet id="3-add-foreign-key-account-user" author="yourname">
        <addForeignKeyConstraint
                baseTableName="account"
                baseColumnNames="user_id"
                referencedTableName="user"
                referencedColumnNames="id"
                constraintName="fk_account_user"/>
    </changeSet>

</databaseChangeLog>
